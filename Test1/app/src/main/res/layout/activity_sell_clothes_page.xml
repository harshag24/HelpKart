<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sell_clothes_page" >

    <Button
        android:id="@+id/traditionalwear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="43dp"
        android:text="Traditional Wear"
        android:onClick="goto_upload_page"/>

    <Button
        android:id="@+id/partywear_button"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="118dp"
        android:text="Party Wear"
        android:onClick="goto_upload_page"/>

    <Button
        android:id="@+id/generalwear_button"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="194dp"
        android:text="General Clothing"
        android:onClick="goto_upload_page"/>
</RelativeLayout>