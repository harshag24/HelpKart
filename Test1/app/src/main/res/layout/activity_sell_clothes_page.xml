<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sell_clothes_page" >

    <Button
        android:id="@+id/traditionalwear_button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_above="@+id/partywear_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="3dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="goto_upload_page"
        android:text="Traditional Wear" />

    <Button
        android:id="@+id/partywear_button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_above="@+id/generalwear_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="goto_upload_page"
        android:text="Party Wear" />

    <Button
        android:id="@+id/generalwear_button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="420dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="goto_upload_page"
        android:text="General Clothing" />
</RelativeLayout>