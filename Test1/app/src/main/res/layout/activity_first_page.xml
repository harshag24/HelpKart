<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".first_page"
   >

    <Button
        android:id="@+id/rentbutton"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_above="@+id/buttonsell"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="116dp"
        android:layout_toStartOf="@+id/donatebutton"
        android:background="@android:color/holo_blue_light"
        android:text="Buy on Rent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="119dp"
        app:srcCompat="@drawable/symbol_help" />

    <TextView
        android:id="@+id/namedisplay"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignTop="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="265dp"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/donatebutton"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_above="@+id/buttonsell"
        android:layout_below="@+id/namedisplay"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="117dp"
        android:background="@android:color/holo_blue_light"
        android:text="Donate to needy" />

    <Button
        android:id="@+id/buttonsell"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="141dp"
        android:background="@android:color/holo_blue_light"
        android:text="Want to Sell?" />

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="218dp"
        android:text="Welcome"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

</RelativeLayout>